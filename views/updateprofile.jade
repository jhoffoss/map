block content
	script.
		role = #{role}
	h3= title

	div#formWrapper
		form#formUpdateProfile(name="updateprofile",method="post",action="/updateprofile")
			table#update
				tr
					td
						label(for="pname") Name of Missing Person
						input#pname(type="text",name="pname",placeholder="Enter Name of the Missing Person",required,value="#{sinfo.profile.name}")

					td
						label(for="page") Person's Age
						input#page(type="text",name="page",placeholder="Enter Age",required,value="#{sinfo.profile.physicalDescription.age}")
				tr
					td
						label(for="pgender") Gender
						input#pgender(type="text",name="pgender",placeholder="Male or Female",required,value="#{sinfo.profile.physicalDescription.gender}")

					td
						label(for="pheight") Height
						input#pheight(type="text",name="pheight",placeholder="Height in Inches",value="#{sinfo.profile.physicalDescription.height}")

				tr
					td
						label(for="pweight") Weight
						input#pweight(type="text",name="pweight",placeholder="Approx Weight in Pounds",value="#{sinfo.profile.physicalDescription.weight}")

					td
						label(for="phair") Hair Color/Length
						input#phair(type="text",name="phair",placeholder="Color(s), Length",value="#{sinfo.profile.physicalDescription.hair}")

				tr
					td
						label(for="peye") Eye Color
						input#peye(type="text",name="peye",placeholder="Eye Color",value="#{sinfo.profile.physicalDescription.eyes}")
					td
						label(for="pdetails") Ethnicity
						input#pdetails(type="text",name="pdetails",placeholder="Caucasian, Latino, African American, etc",value="#{sinfo.profile.physicalDescription.extra}")
				tr
					td
						label(for="city") City
						input#city(type="text",name="city",placeholder="House, Store, etc",value="#{sinfo.profile.lastKnownLocation}")
					td
						label(for="stateLost") State
						select#stateLost(name="stateLost")
							option(value="AL") AL
							option(value="AK") AK
							option(value="AZ") AZ
							option(value="AR") AR
							option(value="CA") CA
							option(value="CO") CO
							option(value="CT") CT
							option(value="DE") DE
							option(value="DC") DC
							option(value="FL") FL
							option(value="GA") GA
							option(value="HI") HI
							option(value="ID") ID
							option(value="IL") IL
							option(value="IN") IN
							option(value="IA") IA
							option(value="KS") KS
							option(value="KY") KY
							option(value="LA") LA
							option(value="ME") ME
							option(value="MD") MD
							option(value="MA") MA
							option(value="MI") MI
							option(value="MN") MN
							option(value="MS") MS
							option(value="MO") MO
							option(value="MT") MT
							option(value="NE") NE
							option(value="NV") NV
							option(value="NH") NH
							option(value="NJ") NJ
							option(value="NM") NM
							option(value="NY") NY
							option(value="NC") NC
							option(value="ND") ND
							option(value="OH") OH
							option(value="OK") OK
							option(value="OR") OR
							option(value="PA") PA
							option(value="RI") RI
							option(value="SC") SC
							option(value="SD") SD
							option(value="TN") TN
							option(value="TX") TX
							option(value="UT") UT
							option(value="VT") VT
							option(value="VA") VA
							option(value="WA") WA
							option(value="WV") WV
							option(value="WI") WI
							option(value="WY") WY

				tr
					td
						label(for="lkl") Last Known Location
						input#lkl(type="text",name="lkl",placeholder="House, Store, etc",value="#{sinfo.profile.lastKnownLocation}")
					td
						label(for="lsw") Last Seen Wearing
						input#lsw(type="text",name="lsw",placeholder="Be as detailed as possible",value="#{sinfo.profile.lastSeenWearing}")
				tr
					td
						label(for="vmake") Vehicle Make
						input#vmake(type="text",name="vmake",placeholder="Make",value="#{sinfo.profile.vehicle.make}")
					td
						label(for="vmodel") Vehicle Model
						input#vmodel(type="text",name="vmodel",placeholder="Model",value="#{sinfo.profile.vehicle.model}")
				tr
					td
						label(for="vyear") Vehicle Year
						input#vyear(type="text",name="vyear",placeholder="Year",value="#{sinfo.profile.vehicle.year}")
					td
						label(for="vcolor") Vehicle Color
						input#vcolor(type="text",name="vcolor",placeholder="Color",value="#{sinfo.profile.vehicle.color}")
				tr
					td(colspan="2")
						label(for="vdetails") Additional Details
						textarea#vdetails(type="textarea",name="vdetails",placeholder="Any extra info that might help find the person.",value="#{sinfo.profile.vehicle.details}")
							|#{sinfo.profile.vehicle.details}
				tr
					td
						label(for="active") Is this search still active?
							input#active(type="radio", name="active", value="ACTIVE")
							|Yes
							input(type="radio", name="active", value="INACTIVE")
							|No

						label(for="found") Has the person been located?
							input#found(type="radio", name="found", value="SUCCESSFULLY")
							|Yes
							input(type="radio", name="found", value="NOT")
							|No

					td
						input#sid(type="hidden",name="sid",value="")
						button#btnSubmit(type="submit",style="float:right") Submit
						button(type="reset", style="float:right;background-color:#e95050") Reset

		a(class="close") x
	
	script
		include ../public/javascripts/close.js
		include ../public/javascripts/height.js


